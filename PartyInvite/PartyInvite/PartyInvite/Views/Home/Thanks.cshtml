@model PartyInvite.Models.GuestResponse
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width = device-width" />"
    <title> Thank You</title>
    <link rel="stylesheet"href="/lib.bootsrap/dist/css/bootstrap.css" />

</head>
<body class="text-center">
    <p>
        <h1> Thank you, @Model.Name</h1>
        @if (Model.WillAttend == true)
        {
            @:Looking forward to seeing you
        }
        else
        {
            @:Sorry you could not attend
        }

    </p>

    <p>
        Click <a class="nav-link" asp-action="ListResponses">Here</a> To View Attendees.
    </p>
</body>
</html>